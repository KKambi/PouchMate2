<h1>
  id: <%= @user.id %> (남의 화장대)
</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Memo</th>
      <th>Category</th>
      <th>Exp date</th>
      <th>User</th>
      <th>Carousel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cosmetics.each do |cosmetic| %>
      <tr>
        <td><%= cosmetic.name %></td>
        <td><%= cosmetic.memo %></td>
        <td><%= cosmetic.category %></td>
        <td><%= cosmetic.exp_date %></td>
        <td><%= cosmetic.user_id %></td>
        
        <td>  
        [이후 카로셀 DB와 연동 필요]
        </td>
        
        <td><%= link_to 'Show', cosmetic %></td>
        <td><%= link_to 'Edit', edit_cosmetic_path(cosmetic) %></td>
        <td><%= link_to 'Destroy', cosmetic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
--------파우치 댓글-------

    <% @user.comments.each do |x| %>
    <br>
        <%= User.find(x.writer_id).nickname %>
        <%= x.content %>
        <% if x.created_at > Time.now-1.day %>
          <%=time_ago_in_words(x.created_at) %>  

         <% elsif x.created_at <= Time.now-1.day and Time.now-3.day <= x.created_at %>
         <%=time_ago_in_words(x.created_at) %>  
         <%= x.created_at.strftime(" %I:%M%p")%>

        <% else %>
          <%= x.created_at.to_date %>  
          

        <%end%>

        <% if x.writer_id == current_user.id %>
          <%= link_to 'Destroy', comment_destroy_path(user_id: current_user.id, comment_id: x.id), method: "delete" %>
        <% end %>
    <% end %>
    
      
    <%= form_tag index_comment_path(user_id: @user.id) do %>
      <%= text_field_tag "content", nil %><br><br>
      <input type="submit" value="작성">
    <% end %>
