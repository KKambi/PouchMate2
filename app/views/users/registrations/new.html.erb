<div class="wrapper">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
    <%= devise_error_messages! %>
    
    <div class="sign_up_new">
      <div id="sign_up">
        Sign up
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: "이메일", autofocus: true, autocomplete: "email", :required => true %>
      </div>

      <div class="field">
        <%= f.text_field :nickname, placeholder: "닉네임", autofocus: true, :required => true, :required => true %>
      </div>

      <div class="field">

        <%= f.password_field :password, placeholder: "비밀번호(6자이상)", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "비밀번호 확인",autocomplete: "new-password", :required => true %>
      </div>      

      <div class="field">
        <%= f.text_field :self_intro, placeholder: "자기소개" %>
      </div>


      <div class="field" style="margin-top: 20px;">
        <%= f.label :"나이" %>
        <%= f.select :age, options_for_select(10..99), :required => true %>
      </div>

      <div class="field">
        <label>
          <span id="gender_label">남자</span>
          <%= f.radio_button(:gender, 0, :checked => true, :id => "gender_radio") %>
        </label>

        <label>
          <span id="gender_label">여자</span>
          <%= f.radio_button(:gender, 1, :id => "gender_radio") %>
        </label>
      </div>

      <div class="field">
        프로필 사진
        <%= f.file_field :profile_img %>
      </div>

      <div>
        <%= f.hidden_field :admin %>
      </div>

      <div class="actions">
        <%= f.submit "회원가입", :id=>"sign_up_submit" %>
      </div>
    <% end %>
  </div>
</div>

<style type="text/css">
  body {
    margin: 0;
    padding: 0;
    background-color: #707070;
    position: relative; 
  }

  body:after {
    content : "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    background-image: url("/signup-back.jpg");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
    opacity : 0.6;
    z-index: -1;
  }

</style>

<script type="text/javascript">

$(document).ready(function(){


  $('.stickyheader').css('display','none');
  $('.footer').css('display','none');

})

</script>
