<div class="wrapper">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="session_new">
      <div id="title">
        POUCH MATE
      </div>

      <div class="id_pw">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "이메일" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "비밀번호" %>
        </div>
      </div>

      <div class="login_button_div">
        <%= f.submit "Login", :id=>"login_button" %>
      </div>

    <%= link_to "Sign Up", new_registration_path(resource_name), :id=>"sign_up_button" %>
  
   <% end %>
  </div>
</div>

<style type="text/css">
  body {
    margin: 0;
    padding: 0;
    background-color: #707070;
    position: relative; 
  }

  body:after {
    content : "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    background-image: url("/login-back.jpg");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
    opacity : 0.6;
    z-index: -1;
  }

</style>

<script type="text/javascript">

$(document).ready(function(){


  $('.stickyheader').css('display','none');
  $('.footer').css('display','none');
  $('.dropdown').css('display', 'none');
  $('.footer_j').css('display', 'none');
  $('.register_button').css('display', 'none');

})

</script>