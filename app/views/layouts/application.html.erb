    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

  <div>
    <% if user_signed_in? %>
      <%= current_user.email %>
      <%= link_to "로그아웃", destroy_user_session_path, method: :delete %>
    <% end %>
  </div>



    <!--한비_Footer에 들어갈 링크-->
    <div style="margin-top: 30px; margin-bottom: 30px; color:red;">
      한비_Footer링크
      
      <div class="footer" style="display:flex; flex-direction: column;">
      <%= link_to mypage_cosmetics_path do %>
        1. 홈(마이페이지)
      <% end %>

      <%= link_to search_cosmetics_path do %>
        2. 추천(검색)
      <% end %> 
      
      <%= link_to friends_index_path do %>
        3. 친구관리로 이동하기
      <% end %>


      </div>
    </div>

  </body>
</html>
