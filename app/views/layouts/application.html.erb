<!DOCTYPE html>
<html>
  <head>
    <title>PouchMate2</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet"> 

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag  'easy-autocomplete.min.css', media: "all" %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'jquery.easy-autocomplete.min.js' %>

    <%= include_gon %>

    <!-- w3school carousel -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

  
    <!-- 노토산스 폰트 적용 -->
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+KR" rel="stylesheet">

  </head>
  <style>
    .carousel-control-next, .carousel-control-prev {
      width: 5%;
    }
    .carousel-item{
      width: 100%;
    }
  </style>
  <body>



  <!-- 임시 알림 드롭다운 다은 -->
  <div class="dropdown" data-behavior='notifications'>
    <div class="dropdown2" data-behavior='notifications-link'>
      <span>알림</span> 
      <span data-behavior="unread-count"></span>
      <div class="dropdown-content" data-behavior="dropdown-item">
      </div>
    </div>
  </div>

  <div class='stickyheader'>
    <div class='title'>
      <img src='/pouchmate_pilgi.png' style='height:20px'>
    </div>
    <div class='notification'>
      <img src='/notification.png' style='height:20px'>        
    </div>
  </div>

    <%= yield %>

  <div class="log-out">
  <%= link_to '로그아웃', destroy_user_session_path, method: :delete %>
  </div>
  
  <div class='register_button'>
    <%= link_to(image_tag("/plus64.png"), new_cosmetic_path) %>
  </div>
  <div class="footer_j">
<!-- group_icon_purple.png
user_purple.png
search_purple.png -->
    <div class="footer_1">
      <%= link_to feed_cosmetics_path do %>
      <img src='/group_icon.png' class='footericon'>
      <% end %>
    </div>
    <div class="footer_2">
      <%= link_to search_cosmetics_path do %>
        <img src='/search.png' class='footericon'>
      <% end %>
    </div>
    <div class="footer_3">
      <%= link_to root_path do %>
        <img src='/user_.png'class='footericon'>
      <% end %>
    </div>
  </div>
  


  </body>

</html>



<!-- 임시 알림 css
